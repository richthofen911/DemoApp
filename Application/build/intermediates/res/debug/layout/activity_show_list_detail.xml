<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="richthofen.app.bluechat.bluetoothchat.ShowListDetail">

    <WebView
        android:id="@+id/wv_listDetail"
        android:layout_width="fill_parent"
        android:layout_height="440dp"
        android:background="#CCE6E1"
        android:layout_above="@+id/tv_addDetail" />

    <TextView
        android:id="@+id/tv_addDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#D1CFCF"
        android:gravity="center"
        android:text="+"
        android:textStyle="bold"
        android:textColor="#FA5050"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"/>
</RelativeLayout>
