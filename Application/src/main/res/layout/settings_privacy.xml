<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#FCFCFC">
            <TextView
                android:id="@+id/setting1"
                android:text="In / Out"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <ToggleButton
                android:id="@+id/toggle1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/setting1"
                android:layout_alignTop="@id/setting1"
                android:layout_marginRight="30dp"
                android:textOn="ON"
                android:textOff="OFF"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FCFCFC">
            <TextView
                android:id="@+id/setting2"
                android:text="Beam Ping/Chat"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <ToggleButton
                android:id="@+id/toggle2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="30dp"
                android:textOn="ON"
                android:textOff="OFF"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FCFCFC">
            <TextView
                android:id="@+id/setting3"
                android:text="List"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <ToggleButton
                android:id="@+id/toggle3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="30dp"
                android:textOn="ON"
                android:textOff="OFF"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FCFCFC">
            <TextView
                android:id="@+id/setting4"
                android:text="Referral/Redemption"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <ToggleButton
                android:id="@+id/toggle4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="30dp"
                android:textOn="ON"
                android:textOff="OFF"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
